<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <h1> <%= @user.name %> </h1>
		<h5> <%= @user_age %> years old <%= @user_gender %> from <%= @user.country %> </h5>
		<%= render 'users/friendships' %> 
      </h1>
    </section>
  </aside>
</div>
<% if signed_in? && @user == current_user %>
    <aside class="span8">
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
<% end %> 
</br>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>What's up with <%= @user.name %> ?? (<%= @user.microposts.count %>)</h3>
      <ul class="microposts">
        <%= render @microposts %>
	  </ul>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
    </div>